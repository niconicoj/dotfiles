/* Confirm Dialog */

@import "styles/color.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"FantasqueSansMono Nerd Font 12";
}

window {
    width:      			225px;
    padding:    			25px;
    location:               center;
    y-offset:               -2em;
    border: 2px;
    border-color: @border;
    border-radius: 8px;

}

entry {
    expand: 				true;
    text-color:				@border;
}
