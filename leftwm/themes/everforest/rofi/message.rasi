/* Message Dialog */

@import "styles/color.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"Fira Sans 12";
}

window {
    width:      			360px;
    padding:    			25px;
    border:					2px;
    border-radius:          8px;
    border-color:           @border;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@border;
}
