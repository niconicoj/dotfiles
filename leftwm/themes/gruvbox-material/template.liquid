{% for tag in workspace.tags %}
{% if tag.mine %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{T1}%{F#d3869b}[%{F#d4be98}{{tag.name}}%{F#d3869b}]%{F-}
%{A}
{% elsif tag.visible  %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{T1}%{F#7daea3}<%{F#d4be98}{{tag.name}}%{F#7daea3}>%{F-}
%{A}
{% elsif tag.busy  %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{T1}%{F#665c54}<%{F#d4be98}{{tag.name}}%{F#665c54}>%{F-}
%{A}
{% else tag.visible  %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{F#d4be98}%{T1} {{tag.name}} %{F-}
%{A}
{% endif %}
{% endfor %}
